@model IEnumerable<AgencyBizBook.Entities.LiabilityStock>
@{
    ViewBag.Title = "Liabilities Stock";
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Liabilities Stock</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">BizBook</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Liabilities</a></li>
                        <li class="breadcrumb-item active">Stock</li>
                    </ol>
                </div>
            </div> <!-- end row -->
        </div>
        <!-- end page-title -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="col-md-12">
                            <button type="button" onclick="showLiabilityStockInModal(this);" class="btn btn-success" style="margin-bottom:1em">Stock-In</button>
                            <button type="button" onclick="showLiabilityStockOutModal(this);" class="btn btn-danger" style="margin-bottom:1em">Stock-Out</button>
                        </div>
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>@Html.DisplayNameFor(model => model.Liability)</th>
                                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                                    <th>@Html.DisplayNameFor(model => model.LastUpdated)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{var index = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@Html.DisplayFor(model => item.Liability.Name)</td>
                                        <td>@Html.DisplayFor(model => item.Quantity)</td>
                                        <td>@Html.DisplayFor(model => item.LastUpdated)</td>
                                        <td>
                                            <div>
                                                <a href="#" class="mdi mdi-circle-edit-outline mdi-18px" onclick="location.href='@Url.Action("Edit")/@item.Id'"></a>&nbsp;
                                                <a href="#" class="mdi mdi-delete mdi-18px"></a>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div>
    <!-- container-fluid -->
</div>
<!-- content -->
<div class="modal bd-example-modal-lg" id="myModal3" data-request-url="@Url.Action("StockIn","Liability")" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"></div>
<div class="modal bd-example-modal-lg" id="myModal4" data-request-url="@Url.Action("StockOut","Liability")" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"></div>
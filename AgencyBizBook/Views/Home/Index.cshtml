@model AgencyBizBook.Models.DashboardIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Dashboard</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Stexo</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end page-title -->

        <div class="row">

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-cube-outline bg-primary  text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Available Products</h5>
                        </div>
                        <h3 class="mt-4">@(Model.TotalProducts == null ? 0 : Model.TotalProducts)</h3>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-cash-multiple  bg-success text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Total Credit</h5>
                        </div>
                        <h3 class="mt-4">PKR @(Model.TotalCredit == null ? 0 : Model.TotalCredit)</h3>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-cash-multiple bg-warning text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Total Debit</h5>
                        </div>
                        <h3 class="mt-4">PKR @(Model.TotalDebit == null ? 0 : Model.TotalDebit)</h3>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="fas fa-file-invoice-dollar bg-danger text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Balance</h5>
                        </div>
                        <h3 class="mt-4">PKR @(Model.Balance == null ? 0 : Model.Balance)</h3>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- container-fluid -->

</div>
<!-- content -->